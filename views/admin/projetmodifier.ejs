<%- include('tete'); -%>

            <!-- END HEADER DESKTOP-->
<%- include('header'); -%>
            <!-- BREADCRUMB-->
            <section class="au-breadcrumb m-t-75">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="au-breadcrumb-content">
                                    <div class="au-breadcrumb-left">
                                        <span class="au-breadcrumb-span">Nous sommes a la page:</span>
                                        <ul class="list-unstyled list-inline au-breadcrumb__list">
                                            <h3>Modification d'un service</h3>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END BREADCRUMB-->

            <!-- STATISTIC-->
            <section class="statistic">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Modifier ici le contenue d'un service</strong>
                                    </div>
                                    <div class="card-body card-block">
                                       <h2>Titre</h2>
                                       <div>
                                           <p style="font-size: 25px;"><%= titre %><button class="item" data-toggle="modal" data-target="#modititre" data-placement="top" title="Edit">
                                            <i class="zmdi zmdi-edit"></i>
                                        </button></p> 
                                       </div>
                                       <h2>Contenue</h2>
                                       <div>
                                           <p style="font-size: 25px;"><%= contenu %> <button class="item" data-toggle="modal" data-target="#modificontenu" data-placement="top" title="Edit">
                                            <i class="zmdi zmdi-edit"></i>
                                        </button></p> 
                                       </div>
                                    </div>
                                </div>
                            </div>          
                        </div>
                  
                    </div>
                </div>
            </section>
            <div class="modal fade" id="modititre" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="largeModalLabel">Modification du titre</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
                        </div>
                        <form action="/admin/projetmodifietitre" method="POST" >
						<div class="modal-body">
							<textarea style="height: 300px; width: 350px;"  type="text" name="titre" placeholder="beeeeeeei"> 

                            </textarea>
                            <input type="hidden" name="id" value=" <%= id %>"/>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							<button type="submit"  class="btn btn-primary">Modifier</button>
                        </div>
                        </form>
					</div>
				</div>
            </div>
            <div class="modal fade" id="modificontenu" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="largeModalLabel">Modification du contenue</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
                        </div>
                        <form action="/admin/projetmodifiecontenu" method="POST" >
						<div class="modal-body">
							<textarea style="height: 300px; width: 350px;" type="text" name="contenue" placeholder="beeeeeeei"> 

                            </textarea>
                            <input type="hidden" name="id" value=" <%= id %>"/>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							<button   type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                        </form>
					</div>
				</div>
            </div>
            <!-- END STATISTIC-->

            <%- include('pied'); -%>
  
</body>

</html>
<!-- end document-->
